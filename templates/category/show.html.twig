{% extends 'admin.html.twig' %}

{% block pagetitle %}Category{% endblock %}

{% block backlink %}
    <a href="{{ path('category_index') }}">
        <i class="fas fa-chevron-circle-left"></i>
        Back to index
    </a>
{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Parent category</th>
                {% if(category.parent != null) %}
                <td>
                    <a href="{{ path('category_show', {'id': category.parent.id }) }}">
                        {{ category.parent.name }}
                    </a>
                </td>
                {% else %}
                <td>-</td>
                {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_edit', {'id': category.id}) }}">
        <i class="fa fa-edit"></i>
        Edit
    </a>

    <hr />

    <p class="text-danger">Delete the category, notice that this change cannot be undone</p>

    {{ include('category/_delete_form.html.twig') }}

{% endblock %}
