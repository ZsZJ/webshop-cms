{# templates/registration/register.html.twig #}
{% extends "base.html.twig" %}

{% block body %}

    <h1>Registratie</h1>
    <div class="row">
        <div class="col-6">
            {{ form_start(form) }}
            {{ form_row(form.email) }}
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            <button class="btn btn-primary rounded-0" type="submit">Registreren!</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}